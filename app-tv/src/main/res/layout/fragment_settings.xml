<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.settings.SettingsFragment"
    tools:deviceIds="tv">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/padding_xlarge"
        android:paddingTop="@dimen/padding_large"
        android:paddingEnd="@dimen/padding_xlarge"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/ic_arrow_back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_large"
            android:fontFamily="sans-serif-medium"
            android:text="@string/settings_title"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xlarge" />

    </LinearLayout>

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/padding_xlarge"
        android:paddingEnd="@dimen/padding_xlarge"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Playback Settings Category -->
            <TextView
                style="@style/TvSettingsCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/playback_settings" />

            <!-- Playback Quality -->
            <LinearLayout
                android:id="@+id/playback_quality_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/playback_quality"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/playback_quality_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        tools:text="Auto" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/navigate_right"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>

            <!-- Auto Play -->
            <LinearLayout
                android:id="@+id/auto_play_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/auto_play"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/auto_play_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </LinearLayout>

            <!-- Subtitle Settings Category -->
            <TextView
                style="@style/TvSettingsCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_settings" />

            <!-- Subtitle Language -->
            <LinearLayout
                android:id="@+id/subtitle_language_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/subtitle_language"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/subtitle_language_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        tools:text="English" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/navigate_right"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>

            <!-- Show Subtitles -->
            <LinearLayout
                android:id="@+id/show_subtitles_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/show_subtitles"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/show_subtitles_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:checked="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false" />

            </LinearLayout>

            <!-- Account Settings Category -->
            <TextView
                style="@style/TvSettingsCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_settings" />

            <!-- Account Info -->
            <LinearLayout
                android:id="@+id/account_info_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/account_info"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/account_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        tools:text="user@example.com" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/navigate_right"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>

            <!-- Sign Out -->
            <TextView
                android:id="@+id/sign_out_button"
                style="@style/TvTextFocusable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:fontFamily="sans-serif-medium"
                android:text="@string/sign_out"
                android:textColor="@color/error_color"
                android:textSize="@dimen/text_size_medium" />

            <!-- About Category -->
            <TextView
                style="@style/TvSettingsCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about" />

            <!-- App Version -->
            <LinearLayout
                android:id="@+id/app_version_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/app_version"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/app_version_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_xsmall"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        tools:text="1.0.0" />

                </LinearLayout>

            </LinearLayout>

            <!-- Terms of Service -->
            <LinearLayout
                android:id="@+id/terms_of_service_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/terms_of_service"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/navigate_right"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>

            <!-- Privacy Policy -->
            <LinearLayout
                android:id="@+id/privacy_policy_setting"
                style="@style/TvSettingsItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/navigate_right"
                    android:src="@drawable/ic_chevron_right" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 