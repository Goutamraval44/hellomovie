<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background"
    android:clipToPadding="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.details.DetailsFragment"
    tools:deviceIds="tv">

    <!-- Backdrop Image -->
    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/backdrop_image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/default_background" />

    <!-- Backdrop Gradient Overlay -->
    <View
        android:id="@+id/backdrop_gradient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_backdrop_height"
        android:background="@drawable/overlay_gradient_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="@dimen/icon_size_medium"
        android:layout_height="@dimen/icon_size_medium"
        android:layout_margin="@dimen/margin_large"
        android:background="@android:color/transparent"
        android:contentDescription="@string/back_button"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Content Poster -->
    <ImageView
        android:id="@+id/poster"
        android:layout_width="@dimen/detail_thumb_width"
        android:layout_height="@dimen/detail_thumb_height"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_large"
        android:adjustViewBounds="true"
        android:contentDescription="@string/poster_image"
        android:elevation="@dimen/card_elevation"
        android:scaleType="centerCrop"
        android:transitionName="@string/shared_element_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backdrop"
        tools:src="@drawable/default_background" />

    <!-- Content Information -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/details_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toBottomOf="@id/backdrop">

        <!-- Title -->
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_xxlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Content Title" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            tools:text="Subtitle Information" />

        <!-- Metadata Row -->
        <LinearLayout
            android:id="@+id/metadata_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/subtitle">

            <!-- Year -->
            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_medium"
                tools:text="2023" />

            <!-- Dot Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="•"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_medium" />

            <!-- Duration -->
            <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_medium"
                tools:text="120 min" />

            <!-- Dot Separator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginEnd="@dimen/margin_small"
                android:text="•"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_medium" />

            <!-- Rating -->
            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_medium"
                tools:text="PG-13" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:maxLines="5"
            android:textColor="@color/text_tertiary"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/metadata_container"
            tools:text="This is a detailed description of the content that provides more information about the plot, characters, and other relevant details. The description helps users decide if they want to watch this content." />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/actions_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description">

            <!-- Play Button -->
            <Button
                android:id="@+id/play_button"
                style="@style/TvButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_action_button_height"
                android:layout_marginEnd="@dimen/margin_medium"
                android:minWidth="@dimen/detail_action_button_width"
                android:text="@string/play_button"
                android:textAllCaps="false" />

            <!-- Trailer Button -->
            <Button
                android:id="@+id/trailer_button"
                style="@style/TvButton.Secondary"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_action_button_height"
                android:layout_marginEnd="@dimen/margin_medium"
                android:minWidth="@dimen/detail_action_button_width"
                android:text="@string/trailer_button"
                android:textAllCaps="false" />

            <!-- Add to Watchlist Button -->
            <Button
                android:id="@+id/watchlist_button"
                style="@style/TvButton.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/detail_action_button_height"
                android:minWidth="@dimen/detail_action_button_width"
                android:text="@string/add_to_watchlist"
                android:textAllCaps="false" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Related Content Section -->
    <TextView
        android:id="@+id/related_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_xlarge"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:layout_marginEnd="@dimen/margin_xlarge"
        android:fontFamily="sans-serif-medium"
        android:text="@string/related_content"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/poster" />

    <!-- Related Content Horizontal List -->
    <androidx.leanback.widget.HorizontalGridView
        android:id="@+id/related_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:clipToPadding="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingStart="@dimen/margin_xlarge"
        android:paddingEnd="@dimen/margin_xlarge"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/related_title" />

    <!-- Loading Indicator -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="@dimen/loading_progress_size"
        android:layout_height="@dimen/loading_progress_size"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Error View -->
    <include
        android:id="@+id/error_view"
        layout="@layout/view_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout> 